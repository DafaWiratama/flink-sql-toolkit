{
    "comments": {
        "lineComment": "--",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["(", ")"],
        ["[", "]"],
        ["{", "}"]
    ],
    "autoClosingPairs": [
        { "open": "(", "close": ")" },
        { "open": "[", "close": "]" },
        { "open": "{", "close": "}" },
        { "open": "'", "close": "'", "notIn": ["string", "comment"] },
        { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
        { "open": "`", "close": "`", "notIn": ["string", "comment"] },
        { "open": "/*", "close": "*/", "notIn": ["string"] }
    ],
    "surroundingPairs": [
        { "open": "(", "close": ")" },
        { "open": "[", "close": "]" },
        { "open": "{", "close": "}" },
        { "open": "'", "close": "'" },
        { "open": "\"", "close": "\"" },
        { "open": "`", "close": "`" }
    ],
    "folding": {
        "markers": {
            "start": "^\\s*--\\s*#?region\\b",
            "end": "^\\s*--\\s*#?endregion\\b"
        }
    },
    "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*",
    "indentationRules": {
        "increaseIndentPattern": "(?i)^\\s*(CREATE|SELECT|INSERT|UPDATE|DELETE|WITH|CASE|WHEN|BEGIN)\\b",
        "decreaseIndentPattern": "(?i)^\\s*(END|;)\\s*$"
    }
}

